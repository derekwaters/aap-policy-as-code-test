[Unit]
Description=Open Policy Agent (OPA) Container access on port 8181
After=local-fs.target

[Container]
# Note that this tag is required to get an ARM build of the container
Image=docker.io/openpolicyagent/opa:1.6.0-dev-static-debug
PublishPort=8181:8181
Exec=run --server --log-level debug --addr=0.0.0.0:8181

[Install]
# Start by default on boot
WantedBy=multi-user.target default.target
